pipeline {
    agent {
       label "deploy"
    }
    stages {
          stage("connect") {
             steps {
               script {
                   sh '''
                   make image VERSION=show BRANCH=null FILE=./Modules/show/Dockerfile
                   chmod +x ./show/Modules/show/cve.sh/cve.sh
                   sudo docker run -i --rm -v $(pwd)/show/Modules/show/cve.sh/cve.sh:/show/Modules/show/cve.sh/cve.sh --entrypoint="/show/Modules/show/cve.sh/cve.sh" smartspace/storage:show
                   make push VERSION=show
                   make pull VERSION=show  

                   '''
                   
               }
             }
          }
        }
}
