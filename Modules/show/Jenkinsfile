pipeline {
    agent {
       label "deploy"
    }
    stages {
          stage("connect") {
             steps {
               script {
                   sh '''
                   make image VERSION=show BRANCH=null FILE=./Modules/show/Dockerfile
                   pwd
                   cd show
                   ls -a
                   chmod 777 ./show/Modules/show/cve.sh
                   docker run -i --rm -v $(pwd)/show/Modules/show/cve.sh --entrypoint="$(pwd)/show/Modules/show/cve.sh" smartspace/storage:show
                   make push VERSION=show
                   make pull VERSION=show  

                   '''
                   
               }
             }
          }
        }
}
