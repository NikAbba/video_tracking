pipeline {
    agent {
       label "deploy"
    }
    stages {
          stage("connect") {
             steps {
               script {
                   sh '''
                   make image VERSION=show BRANCH=null FILE=./Modules/show/Dockerfile
                   cd show/Modules/show/cve.sh
                   chmod +x cve.sh
                   sudo docker run -i --rm -v $(pwd)/cve.sh --entrypoint="$(pwd)/cve.sh" smartspace/storage:show bin/bash
                   make push VERSION=show
                   make pull VERSION=show  

                   '''
                   
               }
             }
          }
        }
}
